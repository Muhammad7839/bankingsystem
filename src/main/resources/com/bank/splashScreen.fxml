<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="80.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.bank.Controllers.SplashController" style="-fx-background-color: lightgreen;">
    <children>
      <Label text="Bank Name" fx:id="bankNameLabel" style="-fx-text-fill: #FF1493;">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>

      <Label text="Welcome to our Banking System !!!" fx:id="welcomeLabel" style="-fx-text-fill: #000000;">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</VBox>
